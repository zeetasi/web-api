<%- include('partials/header') %>

<div class="auth-container">
    <div class="auth-card">
        <h3>Create Your Account</h3>
        
        <% if (error) { %>
            <div class="alert"><%= error %></div>
        <% } %>

        <form action="/register" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" id="username" name="username" required placeholder="Choose a username">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password" name="password" required placeholder="Choose a secure password">
            </div>
            <button type="submit" class="btn btn-custom">Register</button>
        </form>

        <div class="auth-link">
            <p>Already have an account? <a href="/login">Login here</a></p>
        </div>
    </div>
</div>

<%- include('partials/footer') %>